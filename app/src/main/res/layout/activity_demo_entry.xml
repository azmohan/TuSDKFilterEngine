<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/lsq_demo_entry_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/lsq_homepage_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!-- SurfaceTexture -->
        <RelativeLayout
            android:id="@+id/lsq_surface_layout"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/lsq_homepage_button_normal">

            <ImageView
                android:id="@+id/lsq_homepage_shot"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:background="@drawable/lsq_homepage_icon_camera"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lsq_homepage_shot"
                android:layout_marginLeft="16dp"
                android:text="@string/lsq_text_surfacetexture"
                android:textSize="16sp"
                android:textColor="#553213"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/lsq_homepage_icon_next"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"/>
        </RelativeLayout>

        <!-- YUV Data -->
        <RelativeLayout
            android:id="@+id/lsq_yuv_layout"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="31dp"
            android:background="@drawable/lsq_homepage_button_normal">

            <ImageView
                android:id="@+id/lsq_homepage_import"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:background="@drawable/lsq_homepage_icon_beauty"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lsq_homepage_import"
                android:layout_marginLeft="16dp"
                android:text="@string/lsq_text_yuvdata"
                android:textSize="16sp"
                android:textColor="#553213"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/lsq_homepage_icon_next"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>